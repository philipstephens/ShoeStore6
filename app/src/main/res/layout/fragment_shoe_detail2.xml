<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.ShoeDetail2Fragment"
    android:background="@drawable/felt">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_fragment_details1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/id_img_sneakers"
            android:layout_width="202dp"
            android:layout_height="142dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/cd_shoes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sneakers" />

        <androidx.cardview.widget.CardView
            android:id="@+id/detailed_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_margin_start"
            android:layout_marginEnd="@dimen/view_margin_end"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="id_img_sneakers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/id_fragment_details2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/detail_name_heading"
                    android:text="name heading:"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_margin_start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/colorTest1"
                    android:textSize="@dimen/heading1" />

                <EditText
                    android:id="@+id/detail_name_data"
                    android:hint="Name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_field_gap"
                    app:layout_constraintStart_toEndOf="detail_name_heading"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/colorTest1"
                    android:textSize="@dimen/heading1" />

                <TextView
                    android:id="@+id/detail_company_heading"
                    android:text="company heading:"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_margin_start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="detail_name_heading"
                    android:textColor="@color/colorTest1"
                    android:textSize="@dimen/heading2" />

                <EditText
                    android:id="@+id/detail_company_data"
                    android:hint="company"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_field_gap"
                    android:layout_constraintStart_toEndOf="detail_company_heading"
                    android:layout_constraintTop_toBottomOf="detail_name_data"
                    android:textColor="@color/colorTest1"
                    android:textSize="@dimen/heading2"/>

                <TextView
                    android:id="@+id/detail_size_heading"
                    android:text="placeholder size:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_margin_start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="detail_company_heading"
                    android:textColor="@color/colorTest1"
                    android:textSize="@dimen/heading2" />

                <EditText
                    android:id="@+id/detail_size_data"
                    android:hint="size data"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_field_gap"
                    app:layout_constraintStart_toEndOf="detail_size_heading"
                    app:layout_constraintTop_toTopOf="detail_company_data"
                    android:textColor="@color/colorTest1"
                    android:textSize="@dimen/heading2" />

                <TextView
                    android:id="@+id/detail_description_heading"
                    android:text="description"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_margin_start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="detail_size_heading"
                    android:textColor="@color/colorTest1"
                    android:textSize="@dimen/heading2" />

                <EditText
                    android:id="@+id/detail_description_data"
                    android:hint="description"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_field_gap"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="detail_size_data"
                    android:textColor="@color/colorTest1"
                    android:textSize="@dimen/heading2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/detail_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="detailed_card"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/detail_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save" />
            <Button
                android:id="@+id/detail_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>